@model ControleDeContato.Models.ContatoModel
<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>
<a class="btn btn-primary btn btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar Excusão</a>
<a class="btn btn-danger btn btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Excusão</a> 